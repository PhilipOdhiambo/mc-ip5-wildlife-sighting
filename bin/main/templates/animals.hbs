{{#partial "content"}}
<style>
    table {
        background-color: aquamarine
    }
    form {
        background-color: azure;
    } 
    .h2 {
        text-align: center;
    }

    label {
        font-size: 20px;
        color: #000;
    }

    .form-control {
        margin-bottom: 2rem;
    }
</style>
<section>
    <div class="row container">
        <div class="col-md-1"></div>
        <div class="col-md-5">

            <h2>Animals</h2>

            <table class="table table-striped">
                <thead class="thead-dark">
                    <th>Animal name</th>
                    <th>endangered</th>
                    <th>Delete</th>
                </thead>
                <tbody>
                    {{#each animals}}
                    <tr>
                        <td>{{name}}</td>
                        <td>{{isendagered}}</td>
                        <td><a class="text-danger" href="/animals-delete/{{id}}"><span class="material-icons-outlined">
                                    delete_forever
                                </span></a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>


        </div>
        <div class="col-md-5">
            <form class="form border border-success p-4" action="/save-animal" method="POST">

                <h2>Enter new animal</h2>

                <div class="form-feld mb">
                    <label for="new-name">Animal name</label>
                    <input class="form-control" id="new-name" type="text" name="new-name"
                        placeholder="Ex. Black mountain Rhino">
                </div>

                <div class="form-field">
                    <label class="form-label" for="new-endangered">Is this animal endangered</label>
                    <select class="form-control" name="new-endangered" id="new-endangered">
                        <option value="null">---options---</option>
                        <option value="false">NO</option>
                        <option value="true">YES</option>
                    </select>
                </div>

                <button class="btn btn-outline-primary form-control">Save</button>

            </form>

        </div>
        <div class="col-md-1"></div>
    </div>

</section>

{{/partial}}

{{> layout.hbs}}